[
    {
        "name": "frontend",
        "image": "${frontend_image}",
        "portMappings": [
            {
                "containerPort": 5173,
                "hostPort": 5173,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "NODE_ENV",
                "value": "development"
            },
            {
                "name": "VITE_TARGET",
                "value": "http://localhost:3000/"
            }
        ],
        "essential": true
    },
    {
        "name": "backend",
        "image": "${backend_image}",
        "portMappings": [
            {
                "containerPort": 3000,
                "hostPort": 3000,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "DB_HOST",
                "value": "${db_host}"
            },
            {
                "name": "DB_PORT",
                "value": "3306"
            },
            {
                "name": "DB_USER",
                "value": "root"
            },
            {
                "name": "DB_PASS",
                "value": "1"
            },
            {
                "name": "DB_NAME",
                "value": "pizza"
            },
            {
                "name": "REDIS_HOST",
                "value": "${cache_host}"
            },
            {
                "name": "REDIS_PORT",
                "value": "6379"
            },
            {
                "name": "SWAGGER_HOST",
                "value": "${task_host}"
            },
            {
                "name": "SWAGGER_PORT",
                "value": "3000"
            }
        ],
        "essential": true
    }
]