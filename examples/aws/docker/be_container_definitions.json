[
    {
        "name": "backend",
        "image": "${backend_image}",
        "portMappings": [
            {
                "containerPort": 3000,
                "hostPort": 3000,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "DB_HOST",
                "value": "${db_host}"
            },
            {
                "name": "DB_PORT",
                "value": "3306"
            },
            {
                "name": "DB_USER",
                "value": "root"
            },
            {
                "name": "DB_PASS",
                "value": "1"
            },
            {
                "name": "DB_NAME",
                "value": "pizza"
            },
            {
                "name": "REDIS_HOST",
                "value": "${cache_host}"
            },
            {
                "name": "REDIS_PORT",
                "value": "6379"
            },
            {
                "name": "SWAGGER_HOST",
                "value": "${backend_host}"
            },
            {
                "name": "SWAGGER_PORT",
                "value": "3000"
            }
        ],
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/${task_family}-be",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "ecs"
            }
        }
    }
]